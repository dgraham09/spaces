<div class="container">

  <div class="d-flex flex-row card m-4 p-4 my-booking-card">
    <div>
      <% if space.photo.attached? %>
        <%= cl_image_tag space.photo.key%>
      <% else %>
        <%= image_tag "stock/stock_space.jpg"%>
      <% end %>
      <p class="p-2">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Quos vel porro doloribus ipsum cupiditate expedita ex, odio corporis at voluptate dolor iure.</p>
      <div class="d-flex justify-content-around">
        <%= link_to "Edit Space", edit_space_path(space), class:"btn-spaces btn-primary-spaces btn-small"%>
        <%= link_to "Delete Space", space_path(space), class:"btn-danger-spaces btn-spaces btn-small text-white", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </div>
    </div>
    <div class="d-flex flex-column bookings-container">
      <h3><%= space.name %></h3>
      <div class="rating_and_price">
          <div>
            <div>
              <% space.rating.to_i.times do %>
                <span><i class="fa-solid fa-star"></i></span>
              <% end %>
              <% (5 - space.rating.to_i).times do %>
                <span><i class="fa-regular fa-star"></i></span>
              <% end %>
            </div>
            <p><strong><%= space.rating %></strong>/5</p>
          </div>
        </div>
      <div>
        <% bookings.each do |booking| %>
        <div class="d-flex flex-row p-2 my-3 card align-items-center space-card-details">
            <div class="d-flex flex-column flex-grow-1 p-3">
              <h5><span><%= booking.user.first_name%><%= booking.user.last_name %> </span></h5>
              <h6>Company: Example</h6>
              <span>Dates: <strong><%= booking.booking_start_date %> - </strong><strong> <%= booking.booking_end_date %></strong></span>
            </div>
              <button class="btn-spaces btn-secondary-spaces btn-small mx-5">More Info</button>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
